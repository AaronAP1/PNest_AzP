# ============================================
# AZURE POSTGRESQL CONFIGURATION
# ============================================
DB_NAME=nombre_base_datos
DB_USER=usuario_db
DB_PASSWORD=password_db
DB_HOST=servidor.postgres.database.azure.com
DB_PORT=5432

# URL de conexi√≥n completa para Prisma (con SSL requerido para Azure)
DATABASE_URL="postgresql://usuario:password@servidor.postgres.database.azure.com:5432/nombre_db?schema=public&sslmode=require"

# ============================================
# REDIS CACHE (Azure)
# ============================================
REDIS_HOST=tu-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=tu_password_redis
USE_REDIS_CACHE=True
REDIS_URL=rediss://:password@tu-redis.redis.cache.windows.net:6380/0

# ============================================
# MONGODB (COSMOS DB)
# ============================================
MONGODB_DB_NAME=nombre_db
MONGODB_URI=mongodb://usuario:password@servidor.mongo.cosmos.azure.com:10255/?ssl=true

# ============================================
# AZURE RESOURCES
# ============================================
AZURE_RESOURCE_GROUP=tu-resource-group
AZURE_LOCATION=brazilsouth

# ============================================
# MICROSERVICES PORTS
# ============================================
PPP_CORE_PORT=3001
PPP_COMPANIAS_PORT=3002
API_GATEWAY_PORT=3000

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=cambiar_este_secreto_en_produccion
JWT_EXPIRES_IN=1d

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development
