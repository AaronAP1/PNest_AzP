# ==========================================
# CONFIGURACIÓN PARA DESARROLLO LOCAL
# ==========================================

# PPP CORE (.env en apps/ppp_core/)
DATABASE_URL_CORE="postgresql://USER:PASSWORD@HOST:5432/pppNest_Core?schema=public&sslmode=require"
APP_NAME="ppp_core"
PORT=3001
HOST="localhost"
NODE_ENV="development"
LOG_LEVEL="debug"

# PPP COMPAÑÍAS (.env en apps/ppp_compañias/)
DATABASE_URL_COMPANIAS="postgresql://USER:PASSWORD@HOST:5432/pppNest_Companias?schema=public&sslmode=require"
APP_NAME="ppp_companias"
PORT=3002
HOST="localhost"
NODE_ENV="development"
LOG_LEVEL="debug"

# API GATEWAY (.env en apps/ppaz-api-gateway/)
APP_NAME="ppaz_api_gateway"
PORT=3000
HOST="localhost"
PPP_CORE_HOST="localhost"
PPP_CORE_PORT=3001
PPP_COMPANIAS_HOST="localhost"
PPP_COMPANIAS_PORT=3002
DATABASE_URL_CORE="postgresql://USER:PASSWORD@HOST:5432/pppNest_Core?schema=public&sslmode=require"
DATABASE_URL_COMPANIAS="postgresql://USER:PASSWORD@HOST:5432/pppNest_Companias?schema=public&sslmode=require"
NODE_ENV="development"
SWAGGER_TITLE="PPP API Gateway"
SWAGGER_DESCRIPTION="API Gateway para el sistema de Prácticas Pre-Profesionales"
SWAGGER_VERSION="1.0"
SWAGGER_PATH="api/docs"
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
LOG_LEVEL="debug"

# PPP AUTH SERVICE (.env en apps/ppp-auth-service/)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/pppNest_Core?schema=public&sslmode=require"
APP_NAME="ppp_auth_service"
PORT=3003
HOST="localhost"
NODE_ENV="development"
LOG_LEVEL="debug"
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRATION="24h"
JWT_REFRESH_EXPIRATION="7d"
BCRYPT_ROUNDS=10

# PPP EVALUACIONES SERVICE (.env en apps/ppp-evaluaciones-service/)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/pppNest_Core?schema=public&sslmode=require"
APP_NAME="ppp_evaluaciones_service"
PORT=3004
HOST="localhost"
NODE_ENV="development"
LOG_LEVEL="debug"

# ==========================================
# CONFIGURACIÓN PARA AZURE (Variables de App Service)
# ==========================================
# Estas variables se configuran en Azure Portal > App Service > Configuration

# Para cada App Service en Azure:
# 1. App Service: ppp-core-service
#    - DATABASE_URL_CORE (Connection String desde Azure Database)
#    - PORT=8080 (Azure usa 8080 por defecto)
#    - HOST=0.0.0.0
#    - NODE_ENV=production
#    - LOG_LEVEL=info

# 2. App Service: ppp-companias-service
#    - DATABASE_URL_COMPANIAS
#    - PORT=8080
#    - HOST=0.0.0.0
#    - NODE_ENV=production
#    - LOG_LEVEL=info

# 3. App Service: ppaz-api-gateway
#    - PORT=8080
#    - HOST=0.0.0.0
#    - PPP_CORE_HOST=ppp-core-service.azurewebsites.net
#    - PPP_CORE_PORT=443 (HTTPS)
#    - PPP_COMPANIAS_HOST=ppp-companias-service.azurewebsites.net
#    - PPP_COMPANIAS_PORT=443
#    - DATABASE_URL_CORE (para health checks)
#    - DATABASE_URL_COMPANIAS (para health checks)
#    - NODE_ENV=production
#    - SWAGGER_TITLE="PPP API Gateway"
#    - SWAGGER_VERSION="1.0"
#    - RATE_LIMIT_TTL=60
#    - RATE_LIMIT_MAX=100
#    - LOG_LEVEL=info

# ============================================
# MONGODB (COSMOS DB)
# ============================================
MONGODB_DB_NAME=nombre_db
MONGODB_URI=mongodb://usuario:password@servidor.mongo.cosmos.azure.com:10255/?ssl=true

# ============================================
# AZURE RESOURCES
# ============================================
AZURE_RESOURCE_GROUP=tu-resource-group
AZURE_LOCATION=brazilsouth

# ============================================
# MICROSERVICES PORTS
# ============================================
PPP_CORE_PORT=3001
PPP_COMPANIAS_PORT=3002
API_GATEWAY_PORT=3000

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=cambiar_este_secreto_en_produccion
JWT_EXPIRES_IN=1d

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development
